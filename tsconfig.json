{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "removeComments": true
  },
  "ts-node": {
    "preferTsExts": true,
    "transpileOnly": true
  }
}
