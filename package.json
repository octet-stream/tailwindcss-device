{
  "type": "module",
  "name": "tailwindcss-device",
  "description": "TailwindCSS plugin to add variants for input device detection using `@media` queries",
  "version": "0.4.0",
  "author": "Nick K.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/octet-stream/tailwindcss-device.git"
  },
  "packageManager": "pnpm@8.15.9+sha512.499434c9d8fdd1a2794ebf4552b3b25c0a633abcee5bb15e7b5de90f32f47b513aca98cd5cfd001c31f0db454bc3804edccd578501e4ca293a6816166bbd9f81",
  "engines": {
    "node": ">= 18"
  },
  "files": ["lib", "index.css"],
  "main": "./lib/device.js",
  "types": "./lib/device.d.ts",
  "style": "./lib/device.css",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/device.d.ts",
        "default": "./lib/device.js"
      },
      "require": {
        "types": "./lib/device.d.cts",
        "default": "./lib/device.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint-staged": "pnpm lint-staged",
    "test": "vitest run",
    "build": "del-cli lib index.css && tsup-node && tsimp generate.ts",
    "coverage": "c8 pnpm test:unit",
    "ci": "vitest run --coverage",
    "release": "pnpm build && changeset publish",
    "preinstall": "npx --yes only-allow pnpm",
    "prepare": "npx --yes is-in-ci || husky",
    "prepublishOnly": "pnpm build"
  },
  "keywords": ["tailwindcss", "plugin", "postcss", "media-queries"],
  "pnpm": {
    "updateConfig": {
      "ignoreDependencies": ["tailwindcss"]
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.11",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@commitlint/types": "19.5.0",
    "@types/node": "22.10.10",
    "@vitest/browser": "3.0.4",
    "@vitest/coverage-istanbul": "3.0.4",
    "@vitest/ui": "3.0.4",
    "cross-env": "7.0.3",
    "dedent": "1.5.3",
    "del-cli": "6.0.0",
    "hast-util-from-html": "2.0.3",
    "hast-util-to-dom": "4.0.0",
    "husky": "9.1.7",
    "playwright": "1.50.0",
    "postcss": "8.5.1",
    "postcss-load-config": "6.0.1",
    "tailwindcss": "3.4.17",
    "tsimp": "2.0.12",
    "tsup": "8.3.5",
    "typescript": "5.7.3",
    "vitest": "3.0.4"
  },
  "peerDependencies": {
    "postcss": "8.4.21",
    "tailwindcss": "3.3.0"
  }
}
