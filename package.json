{
  "type": "module",
  "name": "tailwind-plugin-device",
  "description": "TailwindCSS plugin to add variants for input device detection using `@media` queries",
  "version": "0.1.0",
  "author": "Nick K.",
  "license": "MIT",
  "source": "src/device.ts",
  "main": "./lib/device.cjs",
  "module": "./lib/device.mjs",
  "types": "./lib/device.d.ts",
  "exports": {
    "import": "./lib/device.mjs",
    "require": "./lib/device.cjs",
    "types": "./lib/device.d.ts"
  },
  "scripts": {
    "lint:types": "tsc --project tsconfig.build.json --noEmit",
    "test": "ava",
    "cleanup": "del-cli lib",
    "build": "microbundle build --no-sourcemap --tsconfig tsconfig.build.json --target node --format es,cjs --generateTypes false && tsc --project tsconfig.d.ts.json && del-cli lib/entries.d.ts lib/variants.d.ts",
    "report": "c8 -r=html npm test",
    "ci": "c8 npm test && c8 report --reporter=json",
    "prepublishOnly": "npm run cleanup && npm run build"
  },
  "keywords": [
    "tailwindcss",
    "plugin",
    "postcss"
  ],
  "devDependencies": {
    "@playwright/test": "^1.32.1",
    "@types/node": "^18.15.11",
    "ava": "^5.2.0",
    "c8": "^7.13.0",
    "del-cli": "^5.0.0",
    "postcss": "8.4.21",
    "tailwindcss": "3.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "postcss": "^8.4.21",
    "tailwindcss": "^3.3.0"
  },
  "dependencies": {
    "microbundle": "^0.15.1"
  }
}
